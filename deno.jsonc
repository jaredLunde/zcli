{
  "tasks": {
    "bench": "deno task compile && hyperfine --runs 100 --warmup 5 'examples/bin/main --help' -i",
    "compile": "deno compile --allow-env --allow-read --allow-write --v8-flags=--use-strict,--predictable --output examples/bin/main examples/main.ts",
    "run": "deno run --allow-env --allow-read --allow-write examples/main.ts",
    "test": "deno test --allow-env --allow-read",
    "test:watch": "deno test --allow-env --allow-read --watch src",
    "test:coverage": "deno test --allow-env --allow-read --coverage=coverage && deno coverage coverage"
  },
  "bench": {
    "files": {
      "include": ["src"]
    }
  },
  "fmt": {
    "files": {
      "include": ["mod.ts", "src"]
    }
  },
  "lint": {
    "files": {
      "include": ["mod.ts", "src"]
    }
  },
  "test": {
    "files": {
      "include": ["src"]
    }
  }
}
